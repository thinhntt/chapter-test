<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Chapter-1: Automate 'User Registration' of an website with Selenium"  parallel="false" verbose="2">
